<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://logging.apache.org/log4j/2.0/config"
       status="OFF" packages="com.hcl.emobileconnect">
       <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
     <PatternLayout pattern="%d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %n"/>
   
    </Console>
  </Appenders>
  <loggers>
              <Logger name="com.hcl.emobileconnect" level="all" />
              <root level="all">
                     <appender-ref ref="STDOUT" level="TRACE" />
              </root>
  </loggers>
</configuration>